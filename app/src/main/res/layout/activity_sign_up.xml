                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Little to no exercise"
                        android:textColor="#000000"
                        android:textSize="10dp" />
                </LinearLayout>


                <!-- Child LinearLayout 2 -->
